{
  "name": "@becomes/cms-most",
  "version": "1.0.29",
  "description": "Utility for Becomes CMS used for client framework applications like Nuxt and Gatsby.",
  "author": "becomes.co",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "build": "node tools.js --build",
    "build:ts": "npm run lint && tsc -p .",
    "build:gatsby": "tsc -p tsconfig.gatsby.json",
    "bundle": "node tools.js --bundle",
    "publish": "node tools.js --publish",
    "link": "node tools.js --link",
    "unlink": "node tools.js --unlink",
    "typedoc-generate": "typedoc",
    "bcms:pull-content": "ts-node src/bin/bcms-most --pull-content",
    "bcms:pull-media": "ts-node src/bin/bcms-most --pull-media",
    "bcms:process-media": "ts-node src/bin/bcms-most --process-media",
    "bcms:call-functions": "ts-node src/bin/bcms-most --call-functions",
    "bcms:parse-gatsby": "ts-node src/bin/bcms-most --parse gatsby",
    "test": "mocha -r ts-node/register test/integration/*.test.ts --recursive --exit",
    "test:active": "mocha -r ts-node/register test/integration/*.active.test.ts --recursive --exit",
    "test:unit": "mocha -r ts-node/register test/unit/*.test.ts --recursive --exit",
    "test:active:unit": "mocha -r ts-node/register test/unit/*.active.test.ts --recursive --exit",
    "lint": "eslint src/**/*"
  },
  "dependencies": {
    "@banez/child_process": "^1.0.3",
    "@banez/fs": "^1.0.2",
    "@becomes/cms-client": "^2.0.7",
    "@types/uuid": "^8.3.0",
    "arg": "^4.1.3",
    "axios": "^0.21.1",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "fs-extra": "^9.1.0",
    "sharp": "^0.30.5",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/chai": "^4.2.18",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.12",
    "@types/mocha": "^8.2.2",
    "@types/node": "^14.14.20",
    "@types/sharp": "^0.25.1",
    "@typescript-eslint/eslint-plugin": "^4.25.0",
    "@typescript-eslint/parser": "^4.25.0",
    "chai": "^4.3.4",
    "env-cmd": "^10.0.1",
    "eslint": "^7.27.0",
    "mocha": "^7.2.0",
    "prettier": "^2.3.0",
    "ts-node": "^8.10.2",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^5.20.1",
    "typedoc": "^0.20.36",
    "typedoc-neo-theme": "^1.1.1",
    "typescript": "^4.2.2"
  },
  "bin": {
    "bcms-most": "bin/bcms-most.js"
  },
  "keywords": [
    "bcms-most"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/becomesco/cms-most.git"
  },
  "bugs": {
    "url": "https://github.com/becomesco/cms-most/issues"
  },
  "homepage": "https://github.com/becomesco/cms-most#readme",
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts"
  }
}
