{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "jsx": "react",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true
  },
  "typedocOptions": {
    "name": "BCMS Most",
    "theme": "./node_modules/typedoc-neo-theme/bin/default",
    "plugin": "typedoc-neo-theme",
    "mode": "file",
    "out": "doc",
    "outline": [
      {
        "API": {
          "Overview": "interfaces/bcmsmostprototype",
          "Cache": "interfaces/bcmsmostcachehandlerprototype",
          "Content": "interfaces/bcmsmostcontenthandlerprototype",
          "Media": "interfaces/bcmsmostmediahandlerprototype"
        }
      }
    ]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "public", "lib", "src/front/gatsby"]
}
