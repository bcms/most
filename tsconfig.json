{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "jsx": "react",
    "sourceMap": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "incremental": false,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "importsNotUsedAsValues": "error"
  },
  "typedocOptions": {
    "entryPoints": ["src"],
    "name": "BCMS Most",
    "theme": "./node_modules/typedoc-neo-theme/bin/default",
    "plugin": "typedoc-neo-theme",
    "out": "doc",
    "outline": [
      {
        "API": {
          "Overview": "interfaces/bcmsmostprototype",
          "Cache": "interfaces/bcmsmostcachehandlerprototype",
          "Content": "interfaces/bcmsmostcontenthandlerprototype",
          "Media": "interfaces/bcmsmostmediahandlerprototype"
        }
      }
    ]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "public", "lib", "src/front/gatsby"]
}
