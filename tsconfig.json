{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "target": "es5",
    "jsx": "react",
    "sourceMap": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "incremental": false,
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "typedocOptions": {
    "entryPoints": ["src", "src/types"],
    "name": "BCMS Most",
    "out": "doc"
  },
  "include": ["src"],
  "exclude": ["src/frontend/_output-path.js"]
}
